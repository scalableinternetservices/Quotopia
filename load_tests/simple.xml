   </arrivalphase>
-->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="unauthed" probability="50" type="ts_http">
      <!-- start at the home page -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at quotes -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit the next 4 pages -->
      <for from="2" to="5" incr="1" var="pagenum">
        <request subst="true">
          <http url="/?page=%%_pagenum%%&#38;tab=trending" version='1.1' method='GET'></http>
        </request>
        <!-- wait for up to 2 seconds, user is looking at quotes -->
        <thinktime value="2" random="true"></thinktime>
      </for>

      <!-- Look at new some quotes -->
      <for from="1" to="5" incr="1" var="pagenum">
        <request subst="true">
          <http url="/?page=%%_pagenum%%&#38;tab=new" version='1.1' method='GET'></http>
        </request>
        <!-- wait for up to 2 seconds, user is looking at quotes -->
        <thinktime value="2" random="true"></thinktime>
      </for>

      <!-- Look at some authors -->
      <request><http url="/authors" version='1.1' method='GET'></http></request>

    </session>

    <session name="authed-browse" probability="50" type="ts_http">
      <!-- Get random user credentials for this session -->
      <setdynvars sourcetype="file" fileid="../data/users.csv" delimiter="," order="random">
       <var name="user_password" />
       <var name="user_name" />
      </setdynvars>

      <!-- Go to home page -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- Login -->
      <request>
        <http url='/sign_in' version='1.1' method='GET'></http>
      </request>
      <request>
        <http url='/sign_in' version='1.1' method='POST'
          content="user%5Bemail%5D=%%_user_name%%&#38;user%5Bpassword%5D=%%_user_password%%&#38;user%5Bremember_me%5D=0&#38;button=">
        </http>
      </request>

      <!-- View Some Quotes -->
      <!-- visit the next 4 pages of trending -->
      <for from="2" to="5" incr="1" var="pagenum">
        <!-- wait for up to 2 seconds, user is looking at quotes -->
        <request subst="true"> <http url="/?page=%%_pagenum%%&#38;tab=trending"></http> </request>
        <thinktime value="2" random="true"></thinktime>
      </for>

      <!-- Look at 3 pages of new quotes -->
      <for from="1" to="2" incr="3" var="pagenum">
        <request subst="true"> <http url="/?page=%%_pagenum%%&#38;tab=new"></http> </request>
        <!-- wait for up to 2 seconds, user is looking at quotes -->
        <thinktime value="2" random="true"></thinktime>
      </for>

      <!-- Look at 1 page of all time quotes -->
      <request> <http url="/?tab=all-time"></http> </request>
      <!-- wait for up to 2 seconds, user is looking at quotes -->
      <thinktime value="2" random="true"></thinktime>

      <!-- Possibly, create a new quote -->
      <setdynvars sourcetype="random_string" length="55">
        <var name="quote_content" />
      </setdynvars>
      <setdynvars sourcetype="random_string" length="13">
        <var name="quote_author" />
      </setdynvars>
      <request subst="true">
        <http url='/quotes/new' version='1.1' method='GET'></http>
        <http url='/quotes' version='1.1' method='POST'
          content="quote%5Bcontent%5D=%%_quote_content%%&#38;quote%5Bauthor_attributes%5D%5Bname%5D=%%_quote_author%%&#38;quote%5Bcategory_list%5D=&#38;button=">
        </http>
      </request>

      <!-- Search for our freshly created quote -->
      <request subst="true">
        <http url='/quotes?search=%_quote_content%' version='1.1' method='GET'></http>
      </request>

      <!-- Possibly, like quote(s) -->

      <!-- View authors of quote(s) they liked -->
    </session>
