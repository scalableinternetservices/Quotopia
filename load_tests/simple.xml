<?xml version="1.0"?><tsung loglevel="info" version="1.0" dumptraffic="true">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>

  <servers>
    <server host="quotopia.raycoll.me" port="80" type="tcp"/>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"/>
    </arrivalphase>
</load>

  <options>
    <option name="glocal_ack_timeout" value="2000"/>
    <option name="file_server" id="users" value="../data/users.csv"/>
    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="unauthed" probability="50" type="ts_http">
      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>

      <thinktime value="2" random="true"/>

      <for from="2" to="5" incr="1" var="pagenum">
        <request subst="true">
          <http url="/?page=%%_pagenum%%&amp;tab=trending" version="1.1" method="GET"/>
        </request>
        <thinktime value="2" random="true"/>
      </for>

      <for from="1" to="5" incr="1" var="pagenum">
        <request subst="true">
          <http url="/?page=%%_pagenum%%&amp;tab=new" version="1.1" method="GET"/>
        </request>
        <thinktime value="2" random="true"/>
      </for>

      <request><http url="/authors" version="1.1" method="GET"/></request>

    </session>

    <session name="authed-browse" probability="50" type="ts_http">
      <setdynvars sourcetype="file" fileid="users" delimiter="," order="random">
       <var name="user_name"/>
       <var name="user_password"/>
      </setdynvars>

      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>

      <request>
        <http url="/users/sign_in" version="1.1" method="GET"/>
      </request>
      <request subst="true">
        <http url="/users/sign_in" version="1.1" method="POST" contents="user%5Bemail%5D=%%_user_name%%&amp;user%5Bpassword%5D=%%_user_password%%&amp;user%5Bremember_me%5D=0&amp;button=">
        </http>
      </request>

      <for from="2" to="5" incr="1" var="pagenum">
        <request subst="true"> <http url="/?page=%%_pagenum%%&amp;tab=trending"/> </request>
        <thinktime value="2" random="true"/>
      </for>

      <for from="1" to="2" incr="1" var="pagenum">
        <request subst="true"> <http url="/?page=%%_pagenum%%&amp;tab=new"/> </request>
        <thinktime value="2" random="true"/>
      </for>

      <request> <http url="/?tab=all-time"/> </request>
      <thinktime value="2" random="true"/>

      <setdynvars sourcetype="random_string" length="55">
        <var name="quote_content"/>
      </setdynvars>
      <setdynvars sourcetype="random_string" length="13">
        <var name="quote_author"/>
      </setdynvars>
      <request subst="true">
        <http url="/quotes/new" version="1.1" method="GET"/>
      </request>
      <request subst="true">
        <http url="/quotes" version="1.1" method="POST" contents="quote%5Bcontent%5D=%%_quote_content%%&amp;quote%5Bauthor_attributes%5D%5Bname%5D=%%_quote_author%%&amp;quote%5Bcategory_list%5D=&amp;button=">
        </http>
      </request>

      <request subst="true">
        <http url="/quotes?search=%%_quote_content%%" version="1.1" method="GET"/>
      </request>

      </session>
    </sessions>
</tsung>
