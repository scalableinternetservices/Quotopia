<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0" dumptraffic="light">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>

  <servers>
    <server host="ec2-52-11-135-149.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="30" unit="second">
     <users arrivalrate="16" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="6" duration="30" unit="second">
     <users arrivalrate="32" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="7" duration="30" unit="second">
     <users arrivalrate="64" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="8" duration="30" unit="second">
     <users arrivalrate="128" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="9" duration="30" unit="second">
     <users arrivalrate="256" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="10" duration="30" unit="second">
     <users arrivalrate="512" unit="second"></users>
    </arrivalphase> 
  </load>

      <options>
        <option name="glocal_ack_timeout" value="2000"/>
        <option name="file_server" id="users" value="../data/users.csv"/>
        <option name="file_server" id="voted_quotes" value="../data/votes.csv"/>
        <option type="ts_http" name="user_agent">
          <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
        </option>
      </options>

      <sessions>
        <session name="unauthed" probability="50" type="ts_http">
          <request>
            <http url="/" version="1.1" method="GET"/>
          </request>

          <thinktime value="2" random="true"/>

          <!-- Visit 4 more pages of trending -->
      <for from="2" to="5" incr="1" var="pagenum">
        <request subst="true">
          <http url="/?page=%%_pagenum%%&amp;tab=trending" version="1.1" method="GET"/>
        </request>
        <thinktime value="2" random="true"/>
    </for>

      <!-- Visit 5 pages of new quotes -->
      <for from="1" to="5" incr="1" var="pagenum">
        <request subst="true">
          <http url="/?page=%%_pagenum%%&amp;tab=new" version="1.1" method="GET"/>
        </request>
        <thinktime value="2" random="true"/>
      </for>

      <!-- Visit the authors page -->
      <request><http url="/authors" version="1.1" method="GET"/></request>

    </session>

    <session name="authed-browse" probability="50" type="ts_http">
      <setdynvars sourcetype="file" fileid="users" delimiter="," order="random">
       <var name="user_name"/>
       <var name="user_password"/>
        <var name="user_password_confirmation"/>
        <var name="user_id"/>
      </setdynvars>

      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>

      <!-- Sign in as a random user from the data file -->
      <request>
        <http url="/users/sign_in" version="1.1" method="GET"/>
      </request>
      <request subst="true">
        <http url="/users/sign_in" version="1.1" method="POST" contents="user%5Bemail%5D=%%_user_name%%&amp;user%5Bpassword%5D=%%_user_password%%&amp;user%5Bremember_me%5D=0&amp;button=">
        </http>
      </request>

      <!-- Visit 4 more pages of trending -->
      <for from="2" to="5" incr="1" var="pagenum">
        <request subst="true"> <http url="/?page=%%_pagenum%%&amp;tab=trending"/> </request>
        <thinktime value="2" random="true"/>
      </for>

      <!-- Visit 2 pages of new quotes -->
      <for from="1" to="2" incr="1" var="pagenum">
        <request subst="true"> <http url="/?page=%%_pagenum%%&amp;tab=new"/> </request>
        <thinktime value="2" random="true"/>
      </for>

      <!-- Visit first page of all time quotes -->
      <request> <http url="/?tab=all-time"/> </request>
      <thinktime value="2" random="true"/>

      <!-- Get list of all time quotes on first page -->
<!--      <request subst="true">
        <dyn_variable name="alltime_quotes" jsonpath="[*].id"/>
        <http url="/home/index.json?tab=all-time"/>
      </request>
-->
      <!-- Iterate over list and visit each quote for 5 seconds -->
<!--      <foreach name="quote_id" in="alltime_quotes">
        <request subst="true">
          <http url="/quotes/%%_quote_id%%" version="1.1" method="GET"/>
        </request>
        <thinktime value="5" random="true"/>
      </foreach>
-->

      <!-- Visit 10 random quotes -->
      <for from="1" to="10" var="counter">
	<setdynvars sourcetype="random_number" start="1" end="3000">
	  <var name="random_quote_id"/>
	</setdynvars>
	<request subst="true">
	  <http url="/quotes/%%_random_quote_id%%" version="1.1" method="GET"/>
	</request>
	<thinktime value="5" random="true"/>
      </for>	

      <!-- Comment on 5 random quotes-->
      <for from="1" to="5" var="counter">
        <setdynvars sourcetype="random_number" start="1" end="3000">
          <var name="random_quote_id"/>
        </setdynvars>
        <setdynvars sourcetype="random_string" length="100">
          <var name="comment_content"/>
        </setdynvars>
        <request subst="true">
          <http url="/quotes/%%_random_quote_id%%/comments" version="1.1" method="POST" contents="utf8=%E2%9C%93&amp;authenticity_token=12345&amp;comment%5Bcontent%5D=%%_comment_content%%&amp;button=">
          </http>
        </request>
      </for>

      <!-- Upvote on 5 random quotes -->
      <for from="1" to="5" var="counter">
        <setdynvars sourcetype="random_number" start="1" end="3000">
          <var name="random_quote_id"/>
        </setdynvars>
        <request subst="true">
          <http url="/votes" version="1.1" method="POST" contents="vote%5Bquote_id%5D=%%_random_quote_id%%&amp;vote%5Buser_id%5D=%%_user_id%%&amp;vote%5Bvalue%5D=1">
          </http>
        </request>
      </for>

      <!-- Downvote on 5 random quotes -->
      <for from="1" to="5" var="counter">
        <setdynvars sourcetype="random_number" start="1" end="3000">
          <var name="random_quote_id"/>
        </setdynvars>
        <request subst="true">
          <http url="/votes" version="1.1" method="POST" contents="vote%5Bquote_id%5D=%%_random_quote_id%%&amp;vote%5Buser_id%5D=%%_user_id%%&amp;vote%5Bvalue%5D=-1">
          </http>
        </request>
      </for>

      <!-- Favorite on 3 random quotes -->
      <for from="1" to="3" var="counter">
        <setdynvars sourcetype="random_number" start="1" end="3000">
          <var name="random_quote_id"/>
        </setdynvars>
        <request subst="true">
          <http url="/favorite_quotes" version="1.1" method="POST" contents="utf8=%E2%9C%93&amp;favorite_quote%5Bquote_id%5D=%%_random_quote_id%%&amp;favorite_quote%5Buser_id%5D=%%_user_id%%&amp;button=">
          </http>
        </request>
      </for>

      <!-- Create a new quote -->
      <setdynvars sourcetype="random_string" length="55">
        <var name="quote_content"/>
      </setdynvars>
      <setdynvars sourcetype="random_string" length="13">
        <var name="quote_author"/>
      </setdynvars>
      <setdynvars sourcetype="random_string" length="13">
        <var name="category"/>
      </setdynvars>
      <request subst="true">
        <http url="/quotes/new" version="1.1" method="GET"/>
      </request>
      <request subst="true">
        <http url="/quotes" version="1.1" method="POST" contents="quote%5Bcontent%5D=%%_quote_content%%&amp;quote%5Bauthor_attributes%5D%5Bname%5D=%%_quote_author%%&amp;quote%5Bcategory_list%5D=%%_category%%&amp;button=">
        </http>
      </request>

      <!-- Search for our just created quote -->
      <request subst="true">
        <http url="/quotes?search=%%_quote_content%%" version="1.1" method="GET"/>
      </request>

      <!-- Visit categories page -->
      <request> <http url="/categories"/> </request>
      <thinktime value="2" random="true"/>

      <!-- Visit authors page -->
      <request> <http url="/authors"/> </request>
      <thinktime value="1" random="true"/>

      <!--<setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) ->-->
        <!--io:format([126, $p, 126, $n, 126, $n], [DynVars]),-->
        <!--ok end.">-->
        <!--<var name="dump" />-->
      <!--</setdynvars>-->

      </session>
    </sessions>
</tsung>
