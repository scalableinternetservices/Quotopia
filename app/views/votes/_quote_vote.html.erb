<!-- Needs quote, vote_id, vote_value, current_user_id -->
<% 
    @votepath = votes_path
    @method = :post
    @upvote_value = 1
    @upvote_class = "fa-chevron-up black"
    @downvote_value = -1
    @downvote_class = "fa-chevron-down black"
    @allow_upvote = true
    @allow_downvote = true
    if vote_value != nil 
        @votepath = vote_path(vote_id)
        @method = :put
        if vote_value == 1
            @allow_upvote = false
            @upvote_class = "fa-chevron-up gray"
            @downvote_value = 0
        elsif vote_value == -1
            @allow_downvote = false
            @downvote_class = "fa-chevron-down gray"
            @upvote_value = 0
        end
    end
%>
<% if @allow_upvote %>
    <%= link_to @votepath,
        data: { :method => @method, 
                :remote => true, 
                params: { vote: {value: @upvote_value, quote_id: quote.id, user_id: current_user_id }}.to_param
        },
        class: "vote-link" do
    %>
    
        <span class="fa fa-2x <%= @upvote_class %>" aria-hidden="true"></span>
    <% end %>
<% else %>
    <span class="fa fa-2x <%= @upvote_class %>" aria-hidden="true"></span>
<% end %>
<h4 class="vote-count-<%=quote.id%>"><%= quote.vote_count %> </h4>
<% if @allow_downvote %>
    <%= link_to @votepath,
        data: { :method => @method, 
                :remote => true, 
                params: { vote: {value: @downvote_value, quote_id: quote.id, user_id: current_user_id }}.to_param
        },
        class: "vote-link" do
    %>
        <span class="fa fa-2x <%= @downvote_class %>" aria-hidden="true"></span>
    <% end %>
<% else %>
    <span class="fa fa-2x <%= @downvote_class %>" aria-hidden="true"></span>
<% end %>
