<%= form_for(setup_quote(@quote)) do |f| %>
    <% if @quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% @quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, style: "width: 500px; height: 100px"%>
    </div>

    <%= f.fields_for :author do |ff| %>
        <div class="field">
          <%= ff.label :name, "Author"%><br>
          <%= ff.text_field :name, style: "width: 500px" %>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :category_list, "Categories" %> <br>
      <%= f.text_field :category_list, placeholder: "Categories separated with comma", style: "width: 500px" %>
    </div>


    <div class="actions">
    <%= f.submit "Submit"%>
    </div>
<% end %>
